
  <div class="container">
    {{>header}}
    <main>
      <h1>{{cube.name}}</h1>
      <img class="cube" src="{{cube.imageUrl}}" alt="cube image" />
      <div class="details">
        <p><span>Description:</span> {{cube.description}}</p>
        
        <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
        <a class="btn" href="/">Back</a>
        {{#if loggedIn}}
          {{#if owned}}         
            <a class="btn" href="/attachAccessory/{{cube._id}}">Attach new accessory</a>
            <br>
            <a class="btn" href="/edit/{{cube._id}}">Edit Cube</a>
            <a class="btn" href="/delete/{{cube._id}}">Delete Cube</a>
         {{/if}}
        {{/if}}
      </div>
      <h2>Accessories</h2>
      <div class="accessories">
        {{#each accessory}}
          <div class="accessory">
            <img class="cube" src="{{imageUrl}}">
            <h4 class="italic">{{name}}</h4>
            <p><span>Description:</span> {{description}}</p>
          </div>
        {{else}}
        <h3 class="italic">This cube has no current accessories</h3>
        {{/each}}
      </div>
    </main>
  </div>
  <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>
