

<body>
  <div class="container">
    {{>header}}
    <main>
      <h1>Browser</h1>
      <form action="" method="">
        <input type="text" class="search" name="search" placeholder="Search...">
        <span>-</span>
        <input type="submit" value="search">
      </form>
      {{#each plink}}
        <div class="plink">
          <img class="plink" src="{{imageUrl}}">
          <p class="name">{{name}}</p>
          <a class="btn" href="/details/{{_id}}">Details</a>
        </div>
      
      {{else}}
        <h2> No Plinks found</h2>
      {{/each}}
    </main>
  </div>
{{>footer}}